<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_product"
    tools:context="com.all2sale.a2s.ProductActivity"
    android:background="@color/gray200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/imageButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:drawableTop="@mipmap/ic_thumb_white" />
        <TextView
            android:id="@+id/imageButton2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:drawableTop="@mipmap/ic_list_white" />
        <TextView
            android:id="@+id/sort_popup"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:drawableTop="@mipmap/ic_sort_white" />
        <TextView
            android:id="@+id/imageButton4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:drawableTop="@mipmap/ic_filter_white" />



    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_toRightOf="@+id/frameLayout"
        android:layout_toEndOf="@+id/frameLayout"
        android:layout_below="@+id/tableLayout"
        android:padding="5dp"
        android:scrollbars="none"
        android:layout_marginTop="45dp">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="20"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/productdetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="3dp"
                    android:orientation="vertical"
                    android:paddingRight="3dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/thumb"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="One Bowl Chocolate Cake"
                        android:background="#ffffff"
                        android:textSize="12dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="3dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/colorPrimaryDark" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:text="$990"
                        android:textSize="14dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="3dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/productdetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="3dp"
                    android:orientation="vertical"
                    android:paddingRight="3dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/thumb"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="One Bowl Chocolate Cake"
                        android:background="#ffffff"
                        android:textSize="12dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:text="$990"
                        android:textSize="14dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="3dp" />

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="3dp"
                    android:orientation="vertical"
                    android:paddingRight="3dp" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/thumb"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="One Bowl Chocolate Cake"
                        android:background="#ffffff"
                        android:textSize="12dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:text="$990"
                        android:textSize="14dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="3dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="3dp"
                    android:orientation="vertical"
                    android:paddingRight="3dp" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/thumb"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="One Bowl Chocolate Cake"
                        android:background="#ffffff"
                        android:textSize="12dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:text="$990"
                        android:textSize="14dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="3dp" />
                </LinearLayout>
            </LinearLayout>


        </GridLayout>






    </ScrollView>

</RelativeLayout>
