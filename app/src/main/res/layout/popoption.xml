<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout6">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ตัวเลือกสินค้า"
            android:paddingTop="20dp"
            android:paddingLeft="35dp"
            android:paddingBottom="14dp"
            android:textSize="18dp"
            android:textIsSelectable="false"
            android:textColor="@color/colorPrimaryDark" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight=".20"
            android:textColor="@color/colorPrimary"
            android:id="@+id/button4"
            android:src="@mipmap/ic_close_green"
            android:textIsSelectable="false"
            android:scaleType="center"
            android:background="#ffffff"
            android:layout_marginRight="5dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:paddingBottom="50dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingRight="20dp"
                android:paddingBottom="80dp"
                android:id="@+id/linearLayout">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"

                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/photo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/thumb_02"
                        app:civ_border_width="0dp"
                        app:civ_border_color="@color/colorPrimaryDark"/>

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="storenamepppppppppppppppppppppppppppppppp"
                        android:layout_toRightOf="@id/photo"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="-5dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="@color/graytext"
                        android:id="@+id/textView10"
                        android:singleLine="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$200"
                        android:paddingLeft="10dp"
                        android:textSize="18dp"
                        android:textColor="@color/material_grey_600"
                        android:id="@+id/textView11"
                        android:layout_toRightOf="@+id/photo"
                        android:layout_below="@+id/textView10"
                        android:layout_marginTop="2dp" />

                </RelativeLayout>


            <TextView android:id="@+id/link_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="color"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textColor="#9A9A9A" />


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/select_gray">
                    <Spinner
                        android:layout_width="fill_parent"
                        android:id="@+id/color_spinner"
                        android:layout_height="40dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:minHeight="0dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_arrow_down" />
                </RelativeLayout>


            <TextView
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="size"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textColor="#9A9A9A" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/select_gray">
                    <Spinner
                        android:layout_width="fill_parent"
                        android:id="@+id/size_spinner"
                        android:layout_height="40dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:minHeight="0dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_arrow_down" />
                </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/option01"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_minus"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="40dp"
                        android:text="-"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="#ffffff"
                        android:contextClickable="false"
                        android:textSize="22dp" />

                    <EditText
                        android:id="@+id/edit_text"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:gravity="center"
                        android:focusable="false"
                        android:text="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                    <Button
                        android:id="@+id/btn_plus"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="40dp"
                        android:text="+"
                        android:textColor="#ffffff"
                        android:background="@color/colorPrimaryDark"
                        android:textSize="22dp" />
                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:text="Total"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="$200"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp" />
                </LinearLayout>


            </LinearLayout>



        </ScrollView>
    <LinearLayout
        android:id="@+id/properLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="ตกลง"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-2dp" />



    </LinearLayout>

    </RelativeLayout>

</LinearLayout>