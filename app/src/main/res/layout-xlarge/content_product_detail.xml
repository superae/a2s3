<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.all2sale.a2s.ProductDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:fillViewport="false"
        android:background="@color/material_grey_100"
        android:paddingBottom="40dp"
        android:layout_gravity="right|left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/thumb"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Black Chocolate Cake"
                    android:gravity="center"
                    android:id="@+id/textView2"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/scrollView2"
                    android:layout_alignStart="@+id/scrollView2"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="22dp"
                    android:background="#ffffff" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="200 Bth"
                    android:id="@+id/textView7"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="25dp"
                    android:textColor="#8d8d8d"
                    android:textSize="24dp"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="#ffffff"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="รายละเอียดสินค้า"
                    android:id="@+id/textView9"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="14dp"
                    android:background="#ffffff"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Preheat oven to 350 degrees F (175 degrees C). Grease and flour a 9x13 inch pan. Sift together the flour, sugar, baking soda, baking powder, cocoa and salt. Set aside."
                    android:id="@+id/textView8"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:textColor="#8d8d8d"
                    android:textSize="12dp"
                    android:background="#ffffff"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="ดูเพิ่มเติม"
                    android:id="@+id/button2"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/border_top"
                    android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                    android:drawableTintMode="add"
                    android:textSize="12dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/colorAccent"
                    android:layout_below="@+id/textView8"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="รีวิวสินค้า"
                    android:id="@+id/textView12"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="14dp"
                    android:background="#ffffff"
                    android:layout_below="@+id/textView11"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="0dp" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"

    android:paddingLeft="15dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/photo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/user"
        app:civ_border_width="0dp"
        app:civ_border_color="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name surname"
        android:layout_toRightOf="@id/photo"
        android:paddingLeft="10dp"
        android:layout_marginTop="-5dp"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="@color/dim_foreground_material_dark"
        android:id="@+id/textView10" />
    <ImageView
        android:id="@+id/star"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:src="@drawable/star3"
        android:paddingLeft="10dp"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="-8dp"
        android:layout_toRightOf="@id/photo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preheat oven to 350 degrees F (175 degrees C). Grease and flour a 9x13 inch pan. Sift together the flour, "
        android:paddingLeft="10dp"
        android:textSize="11dp"
        android:textColor="@color/dim_foreground_material_dark"
        android:id="@+id/textView11"
        android:layout_below="@+id/star"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@+id/photo" />


</RelativeLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="ดูเพิ่มเติม"
                    android:id="@+id/button3"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/border_top"
                    android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                    android:drawableTint="@color/colorAccent"
                    android:drawableTintMode="add"
                    android:textSize="12dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/colorAccent"
                    android:layout_below="@+id/textView13"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/listView"></ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:id="@+id/button"
            android:textColor="#ffffff"
            android:background="#75B4FF"
            android:src="@drawable/ic_chat_bubble_outline_white_24dp"
            android:padding="10dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:id="@+id/button"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_star_border_white_24dp"
            android:adjustViewBounds="false" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="fill_parent"
            android:id="@+id/button"
            android:textColor="#ffffff"
            android:background="#FF7575"
            android:src="@drawable/ic_shopping_cart_white_24dp" />


    </LinearLayout>


</RelativeLayout>
